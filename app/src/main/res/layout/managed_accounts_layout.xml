<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_contributor.feature_account.presentation.views.ManagedAccountsParentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/hello_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_regular"
        android:textColor="@android:color/white"
        android:includeFontPadding="false"
        android:textSize="36sp"
        tools:text="Bonjour" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/omnes_medium"
        android:lines="1"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        tools:text="Bayram !" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/you_have_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_regular"
        android:text="@string/you_have"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/account_badge_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_yellow"
        android:fontFamily="@font/omnes_semibold_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:paddingHorizontal="4dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/accounts_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_regular"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="bénéficiaires" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />
</net.noliaware.yumi_contributor.feature_account.presentation.views.ManagedAccountsParentView>