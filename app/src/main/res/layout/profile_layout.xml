<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_contributor.feature_profile.presentation.views.ProfileParentView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:text="@string/my_profile"
        android:textColor="@color/black_font"
        android:textSize="24sp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/parent_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_half_rounded"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingTop="10dp">

        <net.noliaware.yumi_contributor.feature_profile.presentation.views.ProfileView
            android:id="@+id/profile_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/my_data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/my_data"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/my_data_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/complementary_data_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:text="@string/complementary_data"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/complementary_data_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/get_code_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_filled_rounded_primary"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:gravity="center"
                android:text="@string/get_code"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </net.noliaware.yumi_contributor.feature_profile.presentation.views.ProfileView>
    </androidx.core.widget.NestedScrollView>

</net.noliaware.yumi_contributor.feature_profile.presentation.views.ProfileParentView>