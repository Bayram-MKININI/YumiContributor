<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_contributor.feature_alerts.presentation.views.AlertItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_filled_rounded_grey3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/priority_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/ring_filled_orange"
        android:padding="8dp"
        android:src="@drawable/ic_danger" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/grey_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/body_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:justificationMode="inter_word"
        android:textColor="@color/black_font"
        android:textSize="14sp" />
</net.noliaware.yumi_contributor.feature_alerts.presentation.views.AlertItemView>