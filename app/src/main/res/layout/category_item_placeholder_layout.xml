<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_contributor.feature_account.presentation.views.CategoryItemPlaceholderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_yellow"
        android:backgroundTint="@color/grey_10" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_icon_placeholder" />

    <View
        android:id="@+id/title_view"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:background="@color/grey_10" />

</net.noliaware.yumi_contributor.feature_account.presentation.views.CategoryItemPlaceholderView>