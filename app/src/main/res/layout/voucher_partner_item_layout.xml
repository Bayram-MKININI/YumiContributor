<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_contributor.feature_account.presentation.views.VoucherPartnerItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_rounded_green">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/partner_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_medium_italic"
        android:textColor="@color/grey_2"
        android:textSize="15sp"
        tools:text="La mairie 99 remercie sponsor pour le financement de ce coupon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/information_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_primary"
        android:clickable="true"
        android:fontFamily="@font/omnes_medium_italic"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/information"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="gone"
        tools:visibility="visible" />
</net.noliaware.yumi_contributor.feature_account.presentation.views.VoucherPartnerItemView>